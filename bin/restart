#!/usr/bin/env bash
# Description: Restarts a running process or starts it if not running.
# Usage: restart <process_name> [--detach|-d]
# Example: restart waybar -d

set -euo pipefail

show_help() {
    echo "Usage: $(basename "$0") <process_name> [--detach|-d]"
    echo
    echo "Options:"
    echo "  --detach, -d   Start the process detached (nohup)"
    echo "  -h, --help     Show this help message"
}

if [[ "${1:-}" == "-h" ]] || [[ "${1:-}" == "--help" ]] || [ $# -eq 0 ]; then
    show_help
    exit 0
fi

PROCESS_NAME=""
DETACH=false

while [[ $# -gt 0 ]]; do
    case "$1" in
        --detach|-d)
            DETACH=true
            shift
            ;;
        *)
            if [ -z "$PROCESS_NAME" ]; then
                PROCESS_NAME="$1"
            else
                echo "Error: Multiple process names provided."
                exit 1
            fi
            shift
            ;;
    esac
done

if [ -z "$PROCESS_NAME" ]; then
    echo "Error: Process name is required."
    exit 1
fi

echo "Process: $PROCESS_NAME"

# Kill existing
if pgrep -x "$PROCESS_NAME" >/dev/null; then
    echo "Killing existing instances..."
    pkill -x "$PROCESS_NAME"
    sleep 1
    if pgrep -x "$PROCESS_NAME" >/dev/null; then
        echo "Force killing..."
        pkill -9 -x "$PROCESS_NAME"
        sleep 1
    fi
else
    echo "Not currently running."
fi

# Start
if ! command -v "$PROCESS_NAME" >/dev/null 2>&1; then
    echo "Error: Command '$PROCESS_NAME' not found in PATH."
    exit 1
fi

echo "Starting $PROCESS_NAME..."
if [ "$DETACH" = true ]; then
    nohup "$PROCESS_NAME" >/dev/null 2>&1 &
    disown
    echo "Started (detached)."
else
    "$PROCESS_NAME" &
    echo "Started (background)."
fi