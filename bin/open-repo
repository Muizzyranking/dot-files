#!/usr/bin/env bash

is_git_repo() {
    if ! git -C "$1" rev-parse --is-inside-work-tree &>/dev/null; then
        print_message error "Not a git repository"
        exit 1
    fi
}

get_remote_url() {
    local url
    if ! url=$(git -C "$1" remote get-url origin 2>/dev/null) || [ -z "$url" ]; then
        print_message error "No remote 'origin' found in repository"
        exit 1
    fi
    echo "$url"
}

get_current_branch() {
    local branch
    branch=$(git -C "$1" symbolic-ref --short HEAD 2>/dev/null)
    if [ $? -ne 0 ]; then
        print_message warning "Could not determine current branch, using default branch"
        return 1
    fi
    echo "$branch"
}

is_wsl() {
    if [[ -n "${WSL_DISTRO_NAME}" ]] || [[ -n "${WSL_INTEROP}" ]] || [[ $(uname -r) == *microsoft* ]] || [[ $(uname -r) == *Microsoft* ]]; then
        return 0
    fi
    return 1
}

# Process command line arguments
show_branch=false
target_dir=""

while [[ $# -gt 0 ]]; do
    case "$1" in
    -b | --branch)
        show_branch=true
        shift
        ;;
    *)
        if [ -z "$target_dir" ]; then
            target_dir="$1"
        else
            echo "Error: Unexpected argument: $1"
            exit 1
        fi
        shift
        ;;
    esac
done

# If no directory specified, use current directory
if [ -z "$target_dir" ]; then
    target_dir="$(pwd)"
else
    if [[ "$target_dir" = /* ]]; then
        :
    else
        target_dir="$(pwd)/$target_dir"
    fi
    if [ ! -d "$target_dir" ]; then
        print_message error "Directory does not exist: $target_dir"
        exit 1
    fi
fi

is_git_repo "$target_dir"

remote_url=$(get_remote_url "$target_dir")

if [[ $remote_url == git@* ]]; then
    remote_url=$(echo "$remote_url" | sed 's/git@\(.*\):\(.*\)\.git/https:\/\/\1\/\2/')
fi

remote_url=${remote_url%.git}

if [ "$show_branch" = true ]; then
    branch=$(get_current_branch "$target_dir")
    if [ $? -eq 0 ]; then
        if [[ $remote_url == *"github.com"* ]]; then
            remote_url="${remote_url}/tree/${branch}"
        elif [[ $remote_url == *"gitlab.com"* ]]; then
            remote_url="${remote_url}/-/tree/${branch}"
        elif [[ $remote_url == *"bitbucket.org"* ]]; then
            remote_url="${remote_url}/src/${branch}"
        else
            remote_url="${remote_url}/tree/${branch}"
            print_message warning "Please verify the URL format for your hosting service"
        fi
    fi
fi

if is_wsl; then
    if command -v powershell.exe >/dev/null 2>&1; then
        powershell.exe -Command "Start-Process '$remote_url'"
    elif command -v cmd.exe >/dev/null 2>&1; then
        cmd.exe /c start "$remote_url"
    else
        echo -e "\033[0;31mError: Cannot find Windows command to open URL in WSL\033[0m"
        echo "URL: $remote_url"
        exit 1
    fi
elif [[ "$OSTYPE" == "darwin"* ]]; then
    open "$remote_url"
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    xdg-open "$remote_url"
elif [[ "$OSTYPE" == "msys"* || "$OSTYPE" == "cygwin"* || "$OSTYPE" == "win32" ]]; then
    start "$remote_url"
else
    echo "Unsupported operating system: $OSTYPE"
    echo "URL: $remote_url"
    exit 1
fi
