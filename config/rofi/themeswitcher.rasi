@import "~/.config/rofi/screenshot.rasi"

listview {
    border: 0px;
    padding: 0;
    margin: 0;
    columns: 1;
    lines: 4;
    scrollbar: true;
    background-color: transparent;
    spacing: 15px;
    cycle: true;
    dynamic: true;
    layout: vertical;
}

scrollbar {
    width: 3px;
    border: 0;
    handle-width: 3px;
    handle-color: @blue;
    padding: 0;
    margin: 0 0 0 8px;
    border-radius: 3px;
    background-color: @bg-col-light;
}
