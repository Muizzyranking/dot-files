#!/usr/bin/env bash
alias v='nvim'
alias mvim='NVIM_APPNAME=my_nvim nvim'
alias lv='NVIM_APPNAME=lazyvim nvim'
alias cat='bat'
alias tree='eza --tree --group-directories-first --git-ignore --color=always --icons=always'
alias ls='eza --color=always --icons=always --group-directories-first'
alias cd='z'

alias la='eza -la --color=always --icons=always --group-directories-first'
alias ll='eza -l --color=always --icons=always --group-directories-first'
alias lt='eza --tree --level=2 --color=always --icons=always'

alias df='df -h'               # Human readable
alias du='du -h'               # Human readable
alias dus='du -sh * | sort -h' # Sorted by size

alias myip='curl -s ifconfig.me' # Get public IP

alias gs='git status -sb'
alias gd='git diff'
alias gl='git log --oneline --graph --decorate -10'
alias ga='git add'
alias gc='git commit'
alias gp='git push'

alias ae='$EDITOR ~/.config/zsh/.zsh_alaises'

alias -- -='cd -'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

alias gg='lazygit'

alias install='sudo dnf install -y'
alias update='sudo dnf update -y'
alias search='dnf search'

alias nvimrc='$EDITOR $NVIMRC'
alias tmuxrc='$EDITOR $TMUXRC'
alias zshrc='$EDITOR $ZSHRC'

alias ff='find_file'
